<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="5dp"
    android:paddingTop="5dp"
    android:orientation="horizontal">


    <ProgressBar
        android:id="@+id/news_image_loader"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_centerInParent="true"
        android:visibility="visible" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_margin="5dp"
        android:elevation="30dp"
        app:cardCornerRadius="30dp">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:scaleType="centerCrop"
            android:src="@drawable/news1"
            android:tint="#55000000"
            android:visibility="visible" />

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="94dp"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="26dp"
            android:layout_marginRight="21dp"
            android:gravity="top"
            android:text="Дан Колов-2019»: Рассадин и Тютрин - бронзовые призеры, Григорьев и Скрябин разыграют одну медаль"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/date1"
                android:layout_width="100dp"
                android:layout_height="16dp"
                android:layout_alignTop="@+id/watch_image"
                android:layout_marginLeft="9dp"
                android:layout_toEndOf="@+id/watch_image"
                android:includeFontPadding="false"
                android:text="Сегодня"

                android:textColor="#FFFFFF" />

            <ImageView
                android:id="@+id/watch_image"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="22dp"
                android:layout_marginBottom="14dp"
                android:src="@drawable/watch_image" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>
