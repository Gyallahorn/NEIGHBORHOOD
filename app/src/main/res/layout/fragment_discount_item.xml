<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <android.support.v7.widget.CardView
        android:id="@+id/FunLootExpandableCardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:animateLayoutChanges="true"
        android:elevation="30dp"
        app:cardCornerRadius="30dp">


        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/discount_Image_button"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="176dp"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                android:onClick="hide"
                android:src="@drawable/back"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/discount_item_about"
                app:layout_constraintVertical_bias="1.0" />

            <ImageButton
                android:id="@+id/discount_Image_button_show"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginStart="176dp"
                android:layout_marginTop="92dp"
                android:layout_marginBottom="8dp"
                android:elevation="4dp"
                android:onClick="show"
                android:src="@drawable/show"
                android:visibility="invisible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <ImageView
                android:id="@+id/logo_discount_item"
                android:layout_width="79dp"
                android:layout_height="79dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/aigule"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView

                android:id="@+id/discount_item_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/logo_discount_item"
                android:layout_marginStart="122dp"
                android:layout_marginTop="40dp"
                android:text="Гипермаркет"
                android:textColor="#4A4956"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@id/logo_discount_item"


                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/discount_item_value"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="37dp"
                android:layout_marginRight="15dp"
                android:text="7%"
                android:textColor="#4A4956"
                android:textSize="32sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                />

            <TextView
                android:id="@+id/discount_item_about"
                android:layout_width="315dp"
                android:layout_height="61dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:text="Ежедневно около 800 сотрудников компании делают все возможное, чтобы на складах и прилавках наших магазинов были только свежие и качественные продукты"
                android:textColor="#4A4956"
                android:textSize="14sp"
                android:visibility="invisible"
                app:layout_constraintBottom_toTopOf="@+id/discount_Image_button_show"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.074"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.827" />

        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
