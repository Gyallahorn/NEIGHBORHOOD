<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.esphereal.bair.neighborhood.AboutAppActivity">

    <include
        android:id="@+id/include_layout_top_panel"
        layout="@layout/top_panel_with_back_button"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2264BF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/include_layout_top_panel"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/license_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="Лицензионное соглашение" />
        <TextView

            android:id="@+id/confidential_policy_button"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="30dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:text="Политика конфиденциальности" />
    </LinearLayout>


</android.support.constraint.ConstraintLayout>