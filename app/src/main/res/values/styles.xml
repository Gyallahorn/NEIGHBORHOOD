<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#305CF9</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="colorAccent">#f2b94a</item>
    </style>

    <style name="RoundedCornerButton">
        <item name="background">@drawable/btn_rounded_corner</item>
        <item name="colorButtonNormal">#f2b94a</item>
        <item name="colorControlHighlight">#ffffff</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/firstscreen</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="UserName">
        <item name="android:textSize">
            20sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>
    </style>
    <style name="UserLevel">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            #EAAC34
        </item>

    </style>
    <style name="NavBarMenuItemText">

        <item name="android:textSize">
            22sp
        </item>

        <item name="android:textColor">
            #FFFFFF
        </item>

    </style>
    <style name="ProfileEditText">

        <item name="android:textSize">
            16sp
        </item>

        <item name="android:textColor">
            #38393B
        </item>

    </style>

</resources>
